#include <stdio.h>

int main() {
    int totalClasses, attendedClasses;
    float attendancePercentage;

    // Input total number of classes
    printf("Enter total number of classes held: ");
    scanf("%d", &totalClasses);

    // Input number of classes attended
    printf("Enter number of classes attended: ");
    scanf("%d", &attendedClasses);

    // Check for division by zero
    if (totalClasses == 0) {
        printf("Total classes cannot be zero.\n");
        return 0;
    }

    // Calculate attendance percentage
    attendancePercentage = ((float)attendedClasses / totalClasses) * 100;

    // Print attendance percentage
    printf("Attendance Percentage = %.2f%%\n", attendancePercentage);

    // Optional: Check eligibility (e.g., if 75% is required)
    if (attendancePercentage >= 75) {
        printf("Eligible to write the exam.\n");
    } else {
        printf("Not eligible to write the exam.\n");
    }

    return 0;
}
